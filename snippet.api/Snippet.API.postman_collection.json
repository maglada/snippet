{
    "info": {
        "name": "Snippet API Collection",
        "_postman_id": "snippet-api-collection",
        "description": "Collection of API endpoints for the Snippet management system",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get All Snippets",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/snippet",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "snippet"]
                },
                "description": "Retrieves all code snippets"
            }
        },
        {
            "name": "Get Snippet by ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/snippet/{{snippetId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "snippet", "{{snippetId}}"]
                },
                "description": "Retrieves a specific snippet by ID"
            }
        },
        {
            "name": "Create Snippet",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"Example Snippet\",\n    \"content\": \"console.log('Hello, World!');\",\n    \"language\": \"javascript\",\n    \"description\": \"A simple hello world example\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/snippet",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "snippet"]
                },
                "description": "Creates a new code snippet"
            }
        },
        {
            "name": "Update Snippet",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"Updated Example\",\n    \"content\": \"console.log('Updated!');\",\n    \"language\": \"javascript\",\n    \"description\": \"An updated example\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/snippet/{{snippetId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "snippet", "{{snippetId}}"]
                },
                "description": "Updates an existing snippet"
            }
        },
        {
            "name": "Delete Snippet",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/snippet/{{snippetId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "snippet", "{{snippetId}}"]
                },
                "description": "Deletes a specific snippet"
            }
        },
        {
            "name": "Search Snippets",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/snippet/search?searchTerm={{searchTerm}}&language={{language}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "snippet", "search"],
                    "query": [
                        {
                            "key": "searchTerm",
                            "value": "{{searchTerm}}"
                        },
                        {
                            "key": "language",
                            "value": "{{language}}"
                        }
                    ]
                },
                "description": "Searches snippets based on term and language"
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://localhost:5001",
            "description": "Base URL for the API"
        },
        {
            "key": "snippetId",
            "value": "1",
            "description": "ID of the snippet for testing"
        },
        {
            "key": "searchTerm",
            "value": "example",
            "description": "Search term for filtering snippets"
        },
        {
            "key": "language",
            "value": "javascript",
            "description": "Language filter for snippets"
        }
    ]
}